{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react-jsx",                                    
    "jsxImportSource": "@emotion/react",                
    "module": "CommonJS",                                
    "moduleResolution": "node",                       
    "baseUrl": "src/panel",                                
    "paths": {
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/store/*": ["store/*"],  
    },                                     
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,                       
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "packages"
  ]
}